@model HazarSchool.ViewModels.ResponseModels.StudentResponseViewModels.StudentsResponseModel

<style>
    a:hover {
        font-size: 80%;
    }
</style>

<h1 style="margin-top: 50px; margin-bottom:30px;">List of Students</h1>
<table class="table table-sm table-hover">
    <thead>
        <tr>
            <th style="font-weight: bolder; font-size: larger;">
                S/N
            </th>
            <th>
                Firt Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Edit
            </th>
            <th>
                Details
            </th>
            <th>
                Delete
            </th>
        </tr>
    </thead>
    <tbody>
        @{var num = 1;}
        @foreach (var student in Model.Data)
        {
            <tr>
                <td>
                    @num
                </td>
                <td>
                    @student.FirstName
                </td>
                <td>
                    @student.LastName
                </td>
                <td>
                    <a asp-action="Update" asp-route-id="@student.Id">Edit</a>
                </td>
                <td>
                    <a asp-action="StudentDetails" asp-route-id="@student.Id">Details</a>
                </td>
                <td>
                    <a asp-action="DeleteStudent" asp-route-id="@student.Id">Delete</a>
                </td>
            </tr>
            num++;
        }
    </tbody>
</table>
<p style="margin-top: 10px;"><button type="button" style="padding:4px 8px; color: white; border-radius: 8px; background-color:darkcyan;"><a asp-controller="Student" asp-action="AddStudent" style="color:white; text-decoration:none;">Add Student</a></button></p>
<p style="margin-top: 10px;"><button type="button" style="padding:4px 8px; color: white; border-radius: 8px; background-color:darkcyan;"><a asp-controller="Student" asp-action="FemaleStudents" style="color:white; text-decoration:none;">List Of Female Students</a></button></p>
<p style="margin-top: 10px;"><button type="button" style="padding:4px 8px; color: white; border-radius: 8px; background-color:darkcyan;"><a asp-controller="Student" asp-action="MaleStudents" style="color:white; text-decoration:none;">List Of Male Students</a></button></p>



