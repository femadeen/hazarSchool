@model HazarSchool.ViewModels.RequestModels.StudentRequestModel.CreateStudentRequestModel
@using HazarSchool.Enums
<<style>
    #sp:hover {
        font-size: 150%;
    }
    #sp {
        color: white;
        background-color: darkcyan;
        font-size: 130%;
        font-weight: bold;
        padding: 4px 8px;
    }
    button {
        margin-top: 40px;
        background-color: darkcyan;
        margin-left: 15px;
    }
</style>


<p style="color: brown; font-size:xx-large; font-weight:bold;">Add Student by filling out the form below</p>
<form method="POST">
     <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="col-md-6" style="margin-top: 40px; font-size: larger; font-weight: bold; color: darkcyan">
        <label asp-for="FirstName" class="form-label">First Name</label>
        <input asp-for="FirstName" type="text" class="form-control">
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="col-md-6" style="margin-top: 40px; font-size: larger; font-weight: bold; color: darkcyan">
        <label asp-for="LastName" class="form-label">Last Name</label>
        <input asp-for="LastName" type="text" class="form-control">
    </div>
    <div class="col-md-6" style="margin-top: 40px; font-size: larger; font-weight: bold; color: darkcyan">
        <label asp-for="Age" class="form-label">Age</label>
        <input asp-for="Age" type="number" class="form-control">
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>
    <div class="col-md-6" style="margin-top: 40px; font-size: larger; font-weight: bold; color: darkcyan">
        <label asp-for="Email" class="form-label">email</label>
        <input asp-for="Email" type="text" class="form-control">
    </div>
    <div class="col-md-6" style="margin-top: 40px; font-size: larger; font-weight: bold; color: darkcyan">
        <label asp-for="Password" class="form-label">password</label>
        <input asp-for="Password" type="password" class="form-control">
         <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    
    <div class="col-md-6" style="margin-top: 40px; font-size: larger; font-weight: bold; color: darkcyan">
        <label asp-for="Gender" class="control-label"></label>
        <select asp-for="Gender"> 
            <option value="0">--Select Gender--</option>
            <option value="@Gender.Male">--Male--</option>
            <option value="@Gender.Female">--Female--</option>
        </select>
    </div>
    <div class="col-md-6" style="margin-top: 40px; font-size: larger; font-weight: bold; color: darkcyan">
        <label asp-for="Level" class="control-label"></label>
        <select asp-for="Level"> 
            <option value="0">--Select Level--</option>
            <option value="@Level.Level100">--100 Level--</option>
            <option value="@Level.Level200">--200 Level--</option>
            <option value="@Level.Level300">--300 Level--</option>
            <option value="@Level.Level400">--400 Level--</option>
            <option value="@Level.Level400">--500 Level--</option>
        </select>
        </div>
         <div class="col-md-6" style="margin-top: 40px; font-size: larger; font-weight: bold; color: darkcyan">
        <label asp-for="DepartmentId" class="control-label"></label>
        <select asp-for="DepartmentId" asp-items="ViewBag.Departments"> 
            <option value="0">--Select Department--</option>
        </select>
        
    </div>
     <div class="col-md-6" style="margin-top: 40px; font-size: larger; font-weight: bold; color: darkcyan">
        <label asp-for="CourseIds" class="control-label"></label>
        <select asp-for="CourseIds" asp-items="ViewBag.Courses" multiple> 
            <option value="0">--Select Course--</option>
        </select>
        
    </div>
    
    <button id="sp" type="submit"> Create</button>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
